					"host": [
						"http://api.kudoshub.com"
					],
					"path": [
						"v1",
						"scoring",
						"getfile"
					],
					"query": [
						{
							"key": "file_uid",
							"value": "{{file_uid}}"
						},
						{
							"key": "api_key",
