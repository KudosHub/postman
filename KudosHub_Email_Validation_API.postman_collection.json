{
	"info": {
		"name": "KudosHub Email Validation API",
		"description": "Postman Collection for KudosHub Email Validation API (LeadsVerify Public API)",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Validate a Single Email",
			"request": {
				"method": "GET",
				"url": {
					"raw": "https://api.kudoshub.com/v1/validate?email={{email}}&api_key={{api_key}}&score={{score}}",
					"host": [
						"https://api.kudoshub.com"
					],
					"path": [
						"v1",
						"validate"
					],
					"query": [
						{
							"key": "email",
							"value": "{{email}}",
							"description": "The email address you want to validate."
						},
						{
							"key": "api_key",
							"value": "{{api_key}}",
							"description": "Your unique API Key, found in your account."
						},
						{
							"key": "score",
							"value": "{{score}}",
							"description": "Determines which type of scoring result to include. Possible values: 'catchall', 'valid', or 'both'."
						}
					]
				},
				"description": "API for single email address validation."
			}
		},
		{
			"name": "Bulk Validator - Send File",
			"request": {
				"method": "POST",
				"url": "https://api.kudoshub.com/v1/sendfile",
				"body": {
					"mode": "formdata",
					"formdata": [
						{
							"key": "api_key",
							"value": "{{api_key}}",
							"type": "text",
							"description": "Your unique API Key."
						},
						{
							"key": "score",
							"value": "{{score}}",
							"type": "text",
							"description": "Determines which type of scoring result to include. Possible values: 'catchall', 'valid', or 'both'."
						},
						{
							"key": "file",
							"type": "file",
							"description": "The CSV or TXT file to be validated."
						}
					]
				},
				"description": "Upload a file (CSV, TXT) for bulk email validation."
			}
		},
		{
			"name": "Bulk Validator - File Status",
			"request": {
				"method": "GET",
				"url": {
					"raw": "https://api.kudoshub.com/v1/filestatus?file_uid={{file_uid}}&api_key={{api_key}}",
					"host": [
						"https://api.kudoshub.com"
					],
					"path": [
						"v1",
						"filestatus"
					],
					"query": [
						{
							"key": "file_uid",
							"value": "{{file_uid}}",
							"description": "The unique ID of the file, returned from the /sendfile API."
						},
						{
							"key": "api_key",
							"value": "{{api_key}}",
							"description": "Your unique API Key."
						}
					]
				},
				"description": "Check the processing status of a file submitted via /sendfile."
			}
		},
		{
			"name": "Bulk Validator - Get File",
			"request": {
				"method": "GET",
				"url": {
					"raw": "https://api.kudoshub.com/v1/getfile?file_uid={{file_uid}}&file_type={{file_type}}&api_key={{api_key}}",
					"host": [
						"https://api.kudoshub.com"
					],
					"path": [
						"v1",
						"getfile"
					],
					"query": [
						{
							"key": "file_uid",
							"value": "{{file_uid}}",
							"description": "The unique ID of the file."
						},
						{
							"key": "file_type",
							"value": "{{file_type}}",
							"description": "The type of result file to download. Possible values: valid, invalid, catch_all, do_not_mail, role_based, spamtrap."
						},
						{
							"key": "api_key",
							"value": "{{api_key}}",
							"description": "Your unique API Key."
						}
					]
				},
				"description": "Download a specific result file (e.g., valid, invalid) once processing is complete."
			}
		},
		{
			"name": "Bulk Validator - Get All Files (ZIP)",
			"request": {
				"method": "GET",
				"url": {
					"raw": "https://api.kudoshub.com/v1/getallfiles?file_uid={{file_uid}}&api_key={{api_key}}",
					"host": [
						"https://api.kudoshub.com"
					],
					"path": [
						"v1",
						"getallfiles"
					],
					"query": [
						{
							"key": "file_uid",
							"value": "{{file_uid}}",
							"description": "The unique ID of the file."
						},
						{
							"key": "api_key",
							"value": "{{api_key}}",
							"description": "Your unique API Key."
						}
					]
				},
				"description": "Download a ZIP file containing all result files for a completed job."
			}
		},
		{
			"name": "Bulk Validator - Delete File",
			"request": {
				"method": "GET",
				"url": {
					"raw": "https://api.kudoshub.com/v1/deletefile?file_uid={{file_uid}}&api_key={{api_key}}",
					"host": [
						"https://api.kudoshub.com"
					],
					"path": [
						"v1",
						"deletefile"
					],
					"query": [
						{
							"key": "file_uid",
							"value": "{{file_uid}}",
							"description": "The unique ID of the file to be deleted."
						},
						{
							"key": "api_key",
							"value": "{{api_key}}",
							"description": "Your unique API Key."
						}
					]
				},
				"description": "Deletes a previously submitted file and its associated results from the system."
			}
		},
		{
			"name": "AI Scoring - Send File",
			"request": {
				"method": "POST",
				"url": "https://api.kudoshub.com/v1/scoring/sendfile",
				"body": {
					"mode": "formdata",
					"formdata": [
						{
							"key": "api_key",
							"value": "{{api_key}}",
							"type": "text",
							"description": "Your unique API Key."
						},
						{
							"key": "file",
							"type": "file",
							"description": "The CSV or TXT file to be scored."
						}
					]
				},
				"description": "Upload a file (CSV, TXT) to be scored."
			}
		},
		{
			"name": "AI Scoring - File Status",
			"request": {
				"method": "GET",
				"url": {
					"raw": "https://api.kudoshub.com/v1/scoring/filestatus?file_uid={{file_uid}}&api_key={{api_key}}",
					"host": [
						"https://api.kudoshub.com"
					],
					"path": [
						"v1",
						"scoring",
						"filestatus"
					],
					"query": [
						{
							"key": "file_uid",
							"value": "{{file_uid}}",
							"description": "The unique ID of the file, returned from the /scoring/sendfile API."
						},
						{
							"key": "api_key",
							"value": "{{api_key}}",
							"description": "Your unique API Key."
						}
					]
				},
				"description": "Check the processing status of a file submitted for scoring."
			}
		},
		{
			"name": "AI Scoring - Get File",
			"request": {
				"method": "GET",
				"url": {
					"raw": "https://api.kudoshub.com/v1/scoring/getfile?file_uid={{file_uid}}&api_key={{api_key}}",
					"host": [
						"https://api.kudoshub.com"
					],
					"path": [
						"v1",
						"scoring",
						"getfile"
					],
					"query": [
						{
							"key": "file_uid",
							"value": "{{file_uid}}",
							"description": "The unique ID of the file."
						},
						{
							"key": "api_key",
							"value": "{{api_key}}",
							"description": "Your unique API Key."
						}
					]
				},
				"description": "Download the result file once scoring is complete."
			}
		},
		{
			"name": "AI Scoring - Delete File",
			"request": {
				"method": "GET",
				"url": {
					"raw": "https://api.kudoshub.com/v1/scoring/deletefile?file_uid={{file_uid}}&api_key={{api_key}}",
					"host": [
						"https://api.kudoshub.com"
					],
					"path": [
						"v1",
						"scoring",
						"deletefile"
					],
					"query": [
						{
							"key": "file_uid",
							"value": "{{file_uid}}",
							"description": "The unique ID of the file to be deleted."
						},
						{
							"key": "api_key",
							"value": "{{api_key}}",
							"description": "Your unique API Key."
						}
					]
				},
				"description": "Deletes a previously scored file and its associated results."
			}
		},
		{
			"name": "Get Credit Balance",
			"request": {
				"method": "GET",
				"url": {
					"raw": "https://api.kudoshub.com/v1/getcredits?api_key={{api_key}}",
					"host": [
						"https://api.kudoshub.com"
					],
					"path": [
						"v1",
						"getcredits"
					],
					"query": [
						{
							"key": "api_key",
							"value": "{{api_key}}",
							"description": "Your unique API Key."
						}
					]
				},
				"description": "Check your remaining credit balance."
			}
		},
		{
			"name": "Get API Usage",
			"request": {
				"method": "GET",
				"url": {
					"raw": "https://api.kudoshub.com/v1/getapiusage?api_key={{api_key}}&start_date={{start_date}}&end_date={{end_date}}",
					"host": [
						"https://api.kudoshub.com"
					],
					"path": [
						"v1",
						"getapiusage"
					],
					"query": [
						{
							"key": "api_key",
							"value": "{{api_key}}",
							"description": "Your unique API Key."
						},
						{
							"key": "start_date",
							"value": "{{start_date}}",
							"description": "The start date for the report (format: yyyy-MM-dd). Defaults to 30 days ago."
						},
						{
							"key": "end_date",
							"value": "{{end_date}}",
							"description": "The end date for the report (format: yyyy-MM-dd). Defaults to today."
						}
					]
				},
				"description": "Check your API usage and the breakdown of validation results within a specified date range."
			}
		}
	]
}
